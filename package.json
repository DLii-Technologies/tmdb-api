{
  "name": "tmdb-api",
  "version": "0.0.1",
  "description": "A complete Node-JS wrapper for The Movie Database API",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "coverage": "nyc npm run test",
    "test": "mocha -r node_modules/ts-node/register ./test/**/*.spec.ts --timeout 10000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DLii-Technologies/tmdb-api.git"
  },
  "keywords": [
    "tmdb",
    "api",
    "themoviedatabase",
    "movie",
    "database"
  ],
  "author": "David Ludwig",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DLii-Technologies/tmdb-api/issues"
  },
  "homepage": "https://github.com/DLii-Technologies/tmdb-api#readme",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.1",
    "@types/got": "^9.6.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.8",
    "chai": "^4.2.0",
    "dotenv": "^8.0.0",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "got": "^9.6.0"
  },
  "nyc": {
    "all": true,
    "extension": [".ts"],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
